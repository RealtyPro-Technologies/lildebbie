<%= twitter_bootstrap_form_for @user, url: register_path, class: 'form-horizontal' do |f| %>
  <%= f.text_field :username %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  
  <label>Invitation Code: <%= text_field_tag :invitation_code, nil, class: 'span1' %></label>
  <%= f.actions do %>
    <%= f.submit 'Sign up', class: 'btn btn-primary' %>
  <% end %>
<% end %>