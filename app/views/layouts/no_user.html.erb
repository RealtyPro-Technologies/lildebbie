<!DOCTYPE html>
<html>
<head>
  <title>LilDebbie</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/">LilDebbie</a>
        <div class="nav-collapse">
          <ul class="nav pull-right">
            <li class="dropdown">
              <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
              <div class="dropdown-menu login">
                <%= form_tag login_path, class: 'login' do |f| %>
                  <%= text_field_tag 'user[username]', '', placeholder: 'Username' %>
                  <%= password_field_tag 'user[password]', '', placeholder: 'Password' %>
                  <%= check_box_tag 'user[remember_me]', '1' %>
                  <%= label_tag 'user[remember_me]', 'Remember me', class: 'string optional' %>
                  <%= submit_tag 'Sign In', class: 'btn btn-primary' %>
                  <small>Don't have an account yet?<br /><%= link_to register_path do %>Register here.<% end %></small>
                <% end %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="span12">
        <% if flash[:error] -%>
          <p class='alert alert-error'><%=h flash[:error] %></p>
        <% end -%>
        <% if flash[:notice] -%>
          <p class='alert'><%=h flash[:notice] %></p>
        <% end -%>
      </div>
    </div>
    <%= yield %>
  </div>
</body>
</html>
